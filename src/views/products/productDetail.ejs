<!DOCTYPE html>
<html lang="en">
	<%- include("../partials/head.ejs", {title: "Detalle producto", cssDeseado:["productDetail.css"] }) %>
<body>

    <!-- ------------- HEADER -------------- -->

    <%- include("../partials/header.ejs") %>

<!-- ------------------ MAIN ----------------- -->

    <main>

            <% if (product != undefined) { %>
                <section class="detail">
                    <picture class="detail__img">
                        <img src="../uploads/products/<%= product.image %>" alt="traje">
                    </picture>
                <section class="detail__informacion">
                    <h3 class="detail__informacion__titulo"><%= product.name %> </h3>
                    <h4 class="detail__informacion__precio"> <span id="fondo__precio" >$<%= product.price %> </span></h4>
                    <h7 class="detail_informacion_descripcion"></h6><%= product.description %> </h7>
    
                        <section class="detaill_informacion__formularios" >
                            <form class="detail__informacion__color" action="/colors" method="POST">
                                <label>Color:</label>
                                <select name="color">
                                    <% for( let i = 0; i < product.colors.length; i++ ) { %>
                                    <option value="<% product.colors[i]%>"><%=product.colors[i]%> </option>
                                    <% } %>
                                </select>
                                </form>
                            <form class="detail__informacion__talle" action="/talles" method="POST">
                                <label>Talle:</label>
                                <select name="talles">
                                    <% for( let i = 0; i < product.size.length; i++ ) { %>
                                        <option value="<% product.size[i]%>"><%=product.size[i]%> </option>
                                        <% } %>
                                </select>
                                </form>
                        </section>
                            <div class="cant">
                                <label class="count">Cantidad</label>
                                <button class="menos" onclick="contadormenos()">-</button>
                                <input id="count" type="text" style="text-align: center; width: 30px;">
                                <button class="menos" onclick="contadormas()">+</button>
                            </div>
    
                    
                    <button class="detail__informacion__boton">Agregar al carrito</button>
                    
            </section>
        </section>
            <% } %>

    </main>

    <!-- ---------------- FOOTER ----------------- -->

    <%- include("../partials/footer.ejs") %>

</body>
</html>