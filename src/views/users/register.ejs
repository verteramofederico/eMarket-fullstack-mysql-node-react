<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs", {title: "Registro", cssDeseado:["register.css"] }) %>

<body>

    <!-- ------------- HEADER -------------- -->

    <%- include("../partials/header.ejs") %>

<!-- ------------------ MAIN ----------------- -->

<main>
    <br>
<h1 class="titulo">Iniciar Sesión</h1>

    <form method="POST" action="/user/create" enctype="multipart/form-data" >
        <fieldset class="formulario__field">

            <input 
            type="text" 
            name="nombre"  
            <% if (locals.errors && errors.nombre) { %>
                class="invalido"
            <% } %>
            placeholder="Nombre y Apellido"
            value=" <%= locals.oldData ? oldData.name : null %>" >

            <% if (locals.errors && errors.nombre) { %>
                <div class="textoError"> 
                    <%= errors.nombre.msg %> 
                </div>
            <% } %>

            <input type="email" name="usuario"
            <% if (locals.errors && errors.nombre) { %>
                class="invalido"
            <% } %> placeholder="Email@"
            value=" <%= locals.oldData ? oldData.name : null %>">

            <% if (locals.errors && errors.usuario) { %>
                <div class="textoError"></div>> 
                    <%= errors.usuario.msg %> 
                </div>
            <% } %>

            <input type="text" name="domicilio"<% if (locals.errors && errors.nombre) { %>
                class="invalido"
            <% } %>
            placeholder="Domicilio"
            value=" <%= locals.oldData ? oldData.name : null %>" >

            <% if (locals.errors && errors.domicilio) { %>
                <div class="textoError"></div>> 
                    <%= errors.domicilio.msg %> 
                </div>
            <% } %>
            
            <fieldset>
                <label for="image">Foto de perfil</label>
                <input type="file" name="image" id="image" />
            </fieldset>

            <% if (locals.errors && errors.image) { %>
                <div class="textoError"></div>> 
                    <%= errors.image.msg %> 
                </div>
            <% } %>

            <label class="intereses" <% if (locals.errors && errors.nombre) { %>
                class="invalido"
            <% } %> for="interes">Intereses</label>
            <div class="intereses__opciones">
            <label><input type="checkbox" name="interes" value="Construccion"> Construccion</label>
            <label><input type="checkbox" name="interes" value="Sanitario"> Sanitario</label>
            <label><input type="checkbox" name="interes" value="Jardineria"> Jardineria</label>  
            <label><input type="checkbox" name="interes" value="Otros"> Otros</label>
            </div>
            <% if (locals.errors && errors.intereses) { %>
                <div class="textoError"></div>> 
                    <%= errors.intereses.msg %> 
                </div>
            <% } %>

            <input type="password"  placeholder="Contraseña">
            <input type="password"  placeholder="Confirmar Contraseña">
            <% if (locals.errors && errors.password) { %>
                <div class="textoError"></div>> 
                    <%= errors.password.msg %> 
                </div>
            <% } %>

            <label><input type="checkbox" name="suscripcion" value="suscribe"> Deseo suscribirme a novedades</label>

            <button class="botonEnviar" type="submit">enviar</button>

        </fieldset>
    </form>

</main>

    <!-- ---------------- FOOTER ----------------- -->

    <%- include("../partials/footer.ejs") %>

</body>
</html>