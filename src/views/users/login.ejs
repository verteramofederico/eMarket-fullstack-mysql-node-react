<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs", {title: "Login", cssDeseado:["login.css"] }) %>
<body>

    <!-- ------------- HEADER -------------- -->

    <%- include("../partials/header.ejs") %>

<!-- ------------------ MAIN ----------------- -->

<main>
    <br>
    <br>
<h1 class="titulo">Iniciar Sesión</h1>



    <form action="/user/login" method="POST" >
        <fieldset class="formulario__field">

            <input type="text" name="usuario" placeholder="Ingrese email" class="formUser" >

            <% if (locals.errors && errors.usuario) { %>
                <div class="textoError"> <p>
                    <%= errors.usuario.msg %> </p> 
                </div>
            <% } %>
            <div id="userError"></div>

            <input type="password" name="password" placeholder="Password" class="formPassword">
            <p class="olvido">¿Olvidaste tu contraseña?</p>
            <div id="passwordError"></div>
            <label><input type="checkbox" name="recordar" value="recordar"> Recordar usuario</label>
            <button class="botonEnviar" type="submit">Enviar</button>
 

        </fieldset>
    </form>

    <h5 class="crearCuenta">¿No tienes cuenta? <a href="register">CREAR CUENTA</a></h5>
    <br>
</main>


    <!-- ---------------- FOOTER ----------------- -->

    <%- include("../partials/footer.ejs") %>
    <script src="/js/login.js"></script>
</body>
</html>